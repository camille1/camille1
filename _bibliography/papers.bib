 month = {November},
 note = {00000},
 school = {Paris Sciences et Lettres},
 shorttitle = {Les déterminants de la décision d'émettre du bouche-à-oreille sollicité},
 title = {Les déterminants de la décision d'émettre du bouche-à-oreille sollicité : le cas des contributeurs à une campagne de financement participatif},
 type = {These de doctorat},
